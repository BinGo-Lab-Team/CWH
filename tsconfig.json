{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [{"name": "next"}],
		"paths": {
			"@/*": ["*"],
			"@lib/*": ["src/lib/*"],
			"@components/*": ["src/components/*"],
			"@utils/*": ["src/utils/*"],
			"@services/*": ["src/services/*"],
			"@src/*": ["src/*"],
			"@i18n/*": ["src/i18n/*"],
            "@messages/*": ["messages/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
